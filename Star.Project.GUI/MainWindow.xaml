<Window
    x:Class="Star.Project.GUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Star.Project.GUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="MainWindow"
    MinWidth="330" MinHeight="600"
    Width="600" Height="600"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.UseModernWindowStyle="True"
    ui:ThemeManager.IsThemeAware="True"
    ui:ThemeManager.ActualThemeChanged="Window_ActualThemeChanged"
    mc:Ignorable="d">
    <Grid>
        <ui:NavigationView
            BackRequested="NavigationView_BackRequested"
            IsBackEnabled="{Binding CanGoBack, ElementName=contentFrame}"
            IsTitleBarAutoPaddingEnabled="False"
            SelectionChanged="NavigationView_SelectionChanged"
            >
            <ui:NavigationView.PaneHeader>
                <TextBlock Padding="16 0" VerticalAlignment="Center" Text="=StarProject=" />
            </ui:NavigationView.PaneHeader>
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="格式化" Icon="Bullets" />
                <ui:NavigationViewItem Content="注册表排序" Icon="Sort"/>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.Header>
                <TextBlock/>
            </ui:NavigationView.Header>
            <ui:NavigationView.Content>
                <ui:Frame x:Name="contentFrame"/>
            </ui:NavigationView.Content>
        </ui:NavigationView>
    </Grid>
</Window>
