<ui:ContentDialog
    x:Class="Star.Project.GUI.ConsoleOutputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Star.Project.GUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="输出"
    CloseButtonText="关闭"
    d:DesignHeight="450" d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <RichTextBox x:Name="consoleOutput"
            Background="#000" Block.LineHeight="2" FontFamily="Consolas"
            Foreground="#FFF" IsReadOnly="True"
            ui:ScrollViewerHelper.AutoHideScrollBars="True" />
    </Grid>
</ui:ContentDialog>
